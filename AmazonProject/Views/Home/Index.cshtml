@model BooksViewModel

<h1>Amazon 2.0</h1>

<!--Displaying the info of each book in the db using the BooksViewModel we created that gives info
    about each booka nd the page information-->
@foreach (Books b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">Author: @b.Author</div>
        <div class="card-text p-1">ISBN: @b.Isbn</div>
        <div class="card-text p-1">Classification: @b.Classification</div>
        <div class="card-text p-1">Category: @b.Category</div>
        <div class="card-text p-1">Number of Pages: @b.PageCount</div>
    </div>
}

<!--Creating hrefs to other page dynamically as needed depending on how many books are in the db-->
<div page-num="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

