@page
@model AmazonProject.Pages.PurchaseModel
@{
}

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
            
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.cart.Items)
            {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price</td>
            <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>

            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>

        </tr>
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary btn-lg btn-block" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary btn-lg btn-block" >Checkout</a>
</div>